<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Quality</title>
    <link rel="stylesheet" href="css/styles.css">
    <style>
        body {
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 50px;
}

input[type="text"] {
    width: 300px;
    padding: 10px;
    margin-right: 10px;
}

button {
    padding: 10px 20px;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    margin: 10px 0;
}

a {
    text-decoration: none;
    color: blue;
}

    </style>
</head>
<body>
    <h1>Select Video Quality</h1>
    <ul>
        <% formats.forEach(format => { %>
            <li>
                <a href="/download?url=<%= url %>&quality=<%= format.itag %>">
                    <%= format.qualityLabel %> - <%= format.container %>
                </a>
            </li>
        <% }); %>
    </ul>
    <a href="/">Back</a>
</body>
</html>
